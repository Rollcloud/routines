<div class="card mb-3" data-uid="{{uid}}">
    <div class="row g-0">
        <div class="col-md-4 p-2 text-center">
            <span class="activity-icon">{{icon}}</span>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <p class="card-text">{{description}}</p>
                <p class="card-text"><small class="text-muted">Estimated time: {{time}}
                        minutes</small></p>
            </div>
        </div>
    </div>
</div>