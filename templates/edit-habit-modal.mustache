<!-- New Habit Modal -->
<div class="modal " id="edit-habit-modal" tabindex="-1" aria-labelledby="edit-habit-modal-label"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="edit-habit-modal-label">Edit habit</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="edit-habit-form" class="needs-validation">
                    <div class="row">
                        <div class="col-4 d-flex flex-column">
                            <div class="mb-3 flex-grow-1">
                                <div id="formIcon" class="text-center activity-icon" aria-label="Icon"></div>
                            </div>
                            <div class="mb-3">
                                <label for="formTime" class="form-label">Time (minutes)*</label>
                                <input type="number" id="formTime" class="form-control" placeholder="5"
                                    aria-label="Time" step="1" pattern="\d+" required>
                            </div>
                        </div>
                        <div class="col-8">
                            <div class="mb-3">
                                <h6 id="formName"></h6>
                            </div>
                            <div class="mt-5 mb-3">
                                <label for="formDescription" class="form-label">Description</label>
                                <textarea type="textarea" id="formDescription" class="form-control" rows="5"
                                    placeholder="A short description..." aria-label="Description"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="form-text">* denotes required fields</div>
                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="save-editing btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
