<!-- New Habit Modal -->
<div class="modal " id="create-new-habit-modal" tabindex="-1" aria-labelledby="create-new-habit-modal-label"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="create-new-habit-modal-label">Create new habit</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="create-new-habit-form" class="needs-validation">
                    <div class="row">
                        <div class="col-4 d-flex flex-column">
                            <div class="mb-3 flex-grow-1">
                                <label for="formIcon" class="form-label">Icon*</label>
                                <input type="text" id="formIcon" class="form-control text-center activity-icon"
                                    placeholder="âœ¨" aria-label="Icon" required>
                            </div>
                            <div class="mb-3">
                                <label for="formTime" class="form-label">Time (minutes)*</label>
                                <input type="number" id="formTime" class="form-control" placeholder="5"
                                    aria-label="Time" step="1" pattern="\d+" required>
                            </div>
                        </div>
                        <div class="col-8">
                            <div class="mb-3">
                                <label for="formName" class="form-label">Name*</label>
                                <input type="text" id="formName" class="form-control" placeholder="The thing to do"
                                    aria-label="Name" required>
                            </div>
                            <div class="mb-3">
                                <label for="formDescription" class="form-label">Description</label>
                                <textarea type="textarea" id="formDescription" class="form-control" rows="5"
                                    placeholder="A short description..." aria-label="Description"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="form-text">* denotes required fields</div>
                </form>
                <div id="existing-record-message" class="alert alert-warning d-flex align-items-center" role="alert">
                    A habit with this name and icon already exists, please choose a new name or icon, or delete the
                    existing habit.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="begin-creation btn btn-primary">Create</button>
                </div>
            </div>
        </div>
    </div>